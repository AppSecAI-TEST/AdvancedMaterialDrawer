<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="MaterialNavigationDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="MyOwnTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerColor">#558b2f</item>
        <!-- doesn't change the toolbar color on fragment change-->
        <item name="uniqueToolbarColor">true</item>
        <item name="sectionStyle">@style/MySection</item>
    </style>

    <style name="MySection" >
        <item name="sectionColorIcon">#3A74C5</item>
        <item name="sectionColorText">#3A74C5</item>
        <item name="sectionColorNotification">#3A74C5</item>
        <item name="sectionBackgroundColorPressed">#163A74C5</item>
        <item name="sectionBackgroundColorSelected">#0A3A74C5</item>
        <item name="sectionBackgroundColor">#003A74C5</item>
    </style>

</resources>
